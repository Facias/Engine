#version 400 core
layout(location = 0) out vec4 color;

uniform vec4 vcolor;
in vec3 posVarying;
in vec2 uvVarying;
in vec3 normalVarying;
uniform vec2 tile;

uniform sampler2D texture0;


uniform vec4 samples;
uniform vec4 time;




void main()
{
	vec4 tex = texture2D(texture0, vec2(1,-1)*uvVarying+vec2(0,1));
	color = vcolor*tex;
	color.a += .2*(tex.r);
}